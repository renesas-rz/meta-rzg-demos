From e6b48c9553923a743c5050a4e33f67a83ccced14 Mon Sep 17 00:00:00 2001
From: Binh Nguyen <binh.nguyen.jy@renesas.com>
Date: Mon, 22 Aug 2016 20:17:25 +0900
Subject: [PATCH] Demo3D : add option to set window width, height

Signed-off-by: Binh Nguyen <binh.nguyen.jy@renesas.com>
---
 Demo3D.c | 10 +++++++++-
 1 file changed, 9 insertions(+), 1 deletion(-)

diff --git a/Demo3D.c b/Demo3D.c
index 0f7e5be..4384b89 100644
--- a/Demo3D.c
+++ b/Demo3D.c
@@ -1296,6 +1296,8 @@ usage(int error_code)
 {
 	fprintf(stderr, "Usage: Demo3D [OPTIONS]\n\n"
 		"  -f run in fullscreen\n"
+		"  -width <val> choose window width (800 is default)\n"
+		"  -height <val> choose window height (800 is default)\n"
     "\n"
   );
 
@@ -1336,7 +1338,13 @@ main(int argc, char **argv)
 			window.fullscreen = 1;
 		else if (strcmp("-h", argv[i]) == 0)
 			usage(EXIT_SUCCESS);
-		else
+		else if (strcmp("-width", argv[i]) == 0){
+			window.window_size.width = atoi(argv[i + 1]);
+			i++;
+		} else if (strcmp("-height", argv[i]) == 0){
+			window.window_size.height = atoi(argv[i + 1]);
+			i++;
+		} else
 			usage(EXIT_FAILURE);
 	}  
   
