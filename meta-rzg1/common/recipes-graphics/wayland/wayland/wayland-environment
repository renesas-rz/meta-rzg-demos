# This should be source-d by all of applications which use wayland.
if [ $(echo $LD_PRELOAD | grep '/usr/lib/libEGL.so' | wc -l) -eq 0 ] ; then
    export LD_PRELOAD="${LD_PRELOAD}:/usr/lib/libEGL.so"
fi

export XDG_RUNTIME_DIR="/run/user/root"
if [ ! -d $XDG_RUNTIME_DIR ] ; then
    mkdir --parents $XDG_RUNTIME_DIR
    chmod 0777 $XDG_RUNTIME_DIR
fi
