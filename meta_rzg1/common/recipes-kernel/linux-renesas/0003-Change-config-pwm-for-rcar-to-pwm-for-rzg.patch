From fe80cf455ab62f4855fe36e45666f4f4bd892f7e Mon Sep 17 00:00:00 2001
From: TungDang <tung.dang.jy@rvc.renesas.com>
Date: Thu, 8 Sep 2016 22:27:47 +0700
Subject: [PATCH 1/2] Change config pwm for rcar to pwm for rzg

This setting change for support RZG board

Signed-off-by: TungDang <tung.dang.jy@rvc.renesas.com>
---
 drivers/pwm/Kconfig  | 21 ++++++++++-----------
 drivers/pwm/Makefile |  2 +-
 2 files changed, 11 insertions(+), 12 deletions(-)

diff --git a/drivers/pwm/Kconfig b/drivers/pwm/Kconfig
index 2f4641a..83a719f 100644
--- a/drivers/pwm/Kconfig
+++ b/drivers/pwm/Kconfig
@@ -298,17 +298,6 @@ config PWM_PXA
	  To compile this driver as a module, choose M here: the module
	  will be called pwm-pxa.

-config PWM_RCAR
-	tristate "Renesas R-Car PWM support"
-	depends on ARCH_RCAR_GEN1 || ARCH_RCAR_GEN2 || COMPILE_TEST
-	depends on HAS_IOMEM
-	help
-	  This driver exposes the PWM Timer controller found in Renesas
-	  R-Car chips through the PWM API.
-
-	  To compile this driver as a module, choose M here: the module
-	  will be called pwm-rcar.
-
 config PWM_RENESAS_TPU
	tristate "Renesas TPU PWM support"
	depends on ARCH_SHMOBILE || COMPILE_TEST
@@ -320,6 +309,16 @@ config PWM_RENESAS_TPU
	  To compile this driver as a module, choose M here: the module
	  will be called pwm-renesas-tpu.

+config PWM_RENESAS_PWM
+   tristate "Renesas PWM support"
+   depends on ARCH_SHMOBILE
+   help
+     This driver exposes the PWM Timer Module found
+     in Renesas chips through the PWM API.
+
+     To compile this driver as a module, choose M here: the module
+     will be called pwm-rcar.
+
 config PWM_ROCKCHIP
	tristate "Rockchip PWM support"
	depends on ARCH_ROCKCHIP
diff --git a/drivers/pwm/Makefile b/drivers/pwm/Makefile
index 69b8275..978111a 100644
--- a/drivers/pwm/Makefile
+++ b/drivers/pwm/Makefile
@@ -27,7 +27,7 @@ obj-$(CONFIG_PWM_MXS)		+= pwm-mxs.o
 obj-$(CONFIG_PWM_PCA9685)	+= pwm-pca9685.o
 obj-$(CONFIG_PWM_PUV3)		+= pwm-puv3.o
 obj-$(CONFIG_PWM_PXA)		+= pwm-pxa.o
-obj-$(CONFIG_PWM_RCAR)		+= pwm-rcar.o
+obj-$(CONFIG_PWM_RENESAS_PWM)	+= pwm-rcar.o
 obj-$(CONFIG_PWM_RENESAS_TPU)	+= pwm-renesas-tpu.o
 obj-$(CONFIG_PWM_ROCKCHIP)	+= pwm-rockchip.o
 obj-$(CONFIG_PWM_SAMSUNG)	+= pwm-samsung.o
