#!/bin/sh
#
### BEGIN INIT INFO
# Provides: weston
# Required-Start: $local_fs $remote_fs
# Required-Stop: $local_fs $remote_fs
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
### END INIT INFO

killproc() {
        pid=`/bin/pidof $1`
        [ "$pid" != "" ] && kill $pid
}



case "$1" in
  start)
	amixer set "LINEOUT Mixer DACL" on
	amixer set "DVC Out" 100%
	amixer set "DVC In" 1%
	. /etc/profile
	echo "Starting launcher"
	cd /home/root/
	LD_PRELOAD=/usr/lib/libEGL.so  /home/root/launcher &
  ;;

  stop)
        echo "Stopping launcher"
        killproc launcher
  ;;

  restart)
	$0 stop
        sleep 1
        $0 start
  ;;

  *)
        echo "usage: $0 { start | stop | restart }"
  ;;
esac

exit 0
